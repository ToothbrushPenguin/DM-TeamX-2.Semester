<UserControl
    x:Class="ModulConfig.Views.NewUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModulConfig.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Button
            x:Name="BackBtn"
            Grid.Row="1"
            Width="55"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Back"
            />
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="New user"
            FontFamily="{Binding }"
            FontSize="23                "
            FontWeight="SemiBold" />
        <!--  Initials textbox  -->
        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Initials:"
            FontFamily="{Binding CustomFont}"
            FontSize="12"
            FontWeight="SemiBold" />
        <TextBox
            x:Name="InitialsTxtBox"
            Grid.Row="2"
            Width="65"
            Height="25"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom" />
        <!--  Name textbox  -->
        <Label
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Name:"
            FontFamily="{Binding CustomFont}"
            FontSize="12"
            FontWeight="SemiBold" />
        <TextBox
            x:Name="NameTxtBox"
            Grid.Row="3"
            Width="65"
            Height="25"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom" />
        <!--  Create user button  -->
        <Button
            Grid.Row="4"
            Width="85"
            Height="25"
            Content="Create user" />
    </Grid>
</UserControl>
