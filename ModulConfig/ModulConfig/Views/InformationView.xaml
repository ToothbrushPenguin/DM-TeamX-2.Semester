<UserControl
    x:Class="ModulConfig.Views.InformationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModulConfig.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1200 "
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>

        <Button Style="{DynamicResource ButtonStyle1}"
                x:Name="BackToLogingBtn"
            Grid.Row="1"
            Grid.Column="1"
            Width="55"
            Height="35"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Back" />
        <!--  Information listbox  -->
        <Image
            Grid.Row="1"
            Grid.Column="1"
            Height="22"
            HorizontalAlignment="Left"
            Source="/Icons/InfoIcon.png"
            Margin="0,45,0,0"/>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Information"
            FontSize="18"
            FontWeight="SemiBold" />
        <ListBox
            x:Name="InformationListBox"
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="1"
            Margin="0,10,0,10"
            Background="AliceBlue"
            BorderBrush="Black"
            BorderThickness="2"/>
        <!--  User info  -->
        <Border Style="{DynamicResource ButtonStyle1}"
                Grid.Row="5"
            Grid.RowSpan="2"
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="2" />
        <!--  Initials  -->
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Margin="10,10,10,10"
            Content="Initials:" />
        <TextBox
            x:Name="InitialsTxtBox"
            Grid.Row="5"
            Grid.Column="1"
            Width="225"
            Height="25"
            Margin="10,10,10,10"
            VerticalAlignment="Top" />
        <!--  Name  -->
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Margin="10,10,10,10"
            VerticalAlignment="Bottom"
            Content="Name:" />
        <TextBox
            x:Name="NameTxtBox"
            Grid.Row="5"
            Grid.Column="1"
            Width="225"
            Height="25"
            Margin="10,10,10,10"
            VerticalAlignment="Bottom" />
        <!--  Buttons  -->
        <Button Style="{DynamicResource ButtonStyle1}"
                x:Name="SaveUserBtn"
            Grid.Row="6"
            Grid.Column="1"
            Width="65"
            Height="35"
            Margin="45,0,0,0"
            HorizontalAlignment="Left"
            Content="Save" />
        <Button Style="{DynamicResource ButtonStyle1}"
                x:Name="DeleteUserBtn"
            Grid.Row="6"
            Grid.Column="1"
            Width="65"
            Height="35"
            Margin="0,0,45,0"
            HorizontalAlignment="Right"
            Content="Delete user" />
        <!--  ListView  -->
        <ListView
            x:Name="InformationListView"
            Grid.Row="2"
            Grid.RowSpan="5"
            Grid.Column="2"
            Margin="10,10,10,0">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Modules information">

                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Path=}"
                        Header="Model" />
                    <GridViewColumn
                        Width="150"
                        DisplayMemberBinding="{Binding Path=}"
                        Header="Serialnumber" />
                    <GridViewColumn
                        Width="100"
                        DisplayMemberBinding="{Binding Path=}"
                        Header="Company" />
                    <GridViewColumn
                        Width="300"
                        DisplayMemberBinding="{Binding Path=}"
                        Header="" />
                    <GridViewColumn
                        Width="95"
                        DisplayMemberBinding="{Binding Path=}"
                        Header="Status" />
                </GridView>
            </ListView.View>
        </ListView>
        <!--  Search filters  -->
        <TextBox
            x:Name="SearchTxtBox"
            Grid.Row="1"
            Grid.Column="2"
            Width="500"
            Height="35"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
        <!--  Filter box  -->
        <ComboBox Style="{DynamicResource ComboBoxStyle1}"
            x:Name="FilterComboBox"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="35"
            Margin="400,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            SelectedIndex="0">
            <ComboBoxItem Content="Model" />
            <ComboBoxItem Content="Serialnumber" />
            <ComboBoxItem Content="Company" />
            <ComboBoxItem Content="Status" />
        </ComboBox>
        <!--  Active box  -->
        <ComboBox
            
                  Style="{DynamicResource ComboBoxStyle1}"
                  x:Name="ActiveComboBox"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="35"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            SelectedIndex="0">
            <ComboBoxItem Content="All" />
            <ComboBoxItem Content="Not active" />
            <ComboBoxItem Content="Active" />
        </ComboBox>
        <!--  Buttons  -->
        <Button Style="{DynamicResource ButtonStyle1}"
                x:Name="UploadModuleBtn"
            Grid.Row="7"
            Grid.Column="2"
            Width="100"
            Height="35"
            Margin="10"
            HorizontalAlignment="Left"
            Content="Upload file" />
        <Button Style="{DynamicResource ButtonStyle1}"
                x:Name="OpenModuleBtn"
            Grid.Row="7"
            Grid.Column="2"
            Width="100"
            Height="35"
            Margin="10"
            HorizontalAlignment="Right"
            Content="Open module" />
    </Grid>
</UserControl>
