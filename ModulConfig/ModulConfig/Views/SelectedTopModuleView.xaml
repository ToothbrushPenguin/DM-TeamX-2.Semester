<UserControl
    x:Class="ModulConfig.Views.SelectedTopModuleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModulConfig.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="80" />
            <RowDefinition Height="200" />
            <RowDefinition Height="150" />
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <!--  Buttons  -->
        <Button
            x:Name="BackBtn"
            Grid.Row="1"
            Grid.Column="1"
            Width="55"
            Height="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Back"
            Style="{DynamicResource ButtonStyle1}" />
        <Button
            x:Name="UpdateBtn"
            Grid.Row="5"
            Grid.Column="1"
            Width="55"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Update"
            Style="{DynamicResource ButtonStyle1}" />
        <Button
            x:Name="DeleteBtn"
            Grid.Row="5"
            Grid.Column="2"
            Width="55"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Delete"
            Style="{DynamicResource ButtonStyle1}" />
        <Button
            x:Name="EditBtn"
            Grid.Row="5"
            Grid.Column="3"
            Width="65"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Edit note"
            Style="{DynamicResource ButtonStyle1}" />
        <Button
            x:Name="DeleteNoteBtn"
            Grid.Row="5"
            Grid.Column="3"
            Width="75"
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="Delete note"
            Style="{DynamicResource ButtonStyle1}" />
        <!--  Labels  -->
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="TopModule: "
            FontSize="18"
            FontWeight="SemiBold" />
        <Label
            x:Name="TopModuleNameLabel"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,35,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="[Skal bindes]"
            FontSize="18"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Last updated by:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,10,10,10"
            Content="Basic Information"
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,0,179,80"
            Content="Serial: "
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,0,179,30"
            Content="Model: "
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,0,179,-20"
            Content="Variant: "
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,0,179,-70"
            Content="Date: "
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="10,10,10,10"
            Content="System Version"
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,0,179,45"
            Content="Support API:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,20,179,0"
            Content="IO Board"
            FontSize="14"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="0,70,179,0"
            Content="Application:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="25"
            Margin="200,70,0,0"
            Content="Kernel:"
            FontWeight="SemiBold" />
        <Label
            Grid.Row="3"
            Grid.Column="2"
            Width="100"
            Height="25"
            Margin="0,70,0,0"
            Content="Board:"
            FontWeight="SemiBold" />
        <!--  Images  -->
        <Image
            Grid.Row="1"
            Grid.Column="1"
            Height="22"
            Margin="0,57,0,0"
            HorizontalAlignment="Left"
            Source="/Icons/InfoIcon.png" />

        <!--  TextBoxes  -->
        <TextBox
            x:Name="LastUpdatedByTxtBox"
            Grid.Row="1"
            Grid.Column="2"
            Width="100"
            Height="25"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Text="[Skal Bindes]" />
        <TextBox
            x:Name="SerialTxtBox"
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,0,0,75"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="ModelTxtBox"
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,0,0,25"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="VariantTxtBox"
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,25,0,0"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="DateTxtBox"
            Grid.Row="2"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,75,0,0"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="SupportApiTxtBox"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,0,10,45"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="ApplicationTxtBox"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="20"
            Margin="0,72,10,0"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="KernelTxtBox"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="100"
            Height="20"
            Margin="20,72,0,0"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <TextBox
            x:Name="BoardTxtBox"
            Grid.Row="3"
            Grid.Column="2"
            Width="100"
            Height="20"
            Margin="130,72,0,0"
            VerticalContentAlignment="Center"
            Text="[Skal bindes]" />
        <!--  Borders  -->
        <Border
            x:Name="BasicInfoBorder"
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,10,10,10"
            BorderBrush="Black"
            BorderThickness="2" />
        <Border
            x:Name="SBCInfoBorder"
            Grid.Row="2"
            Grid.Column="2"
            Margin="10,10,10,10"
            BorderBrush="Black"
            BorderThickness="2" />
        <Border
            x:Name="SystemInfoBorder"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            BorderBrush="Black"
            BorderThickness="2" />
        <Border
            x:Name="SecurityBorder"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="10,10,10,10"
            BorderBrush="Black"
            BorderThickness="2" />
        <Border
            x:Name="CompanyBorder"
            Grid.Row="2"
            Grid.Column="3"
            Margin="10,10,10,10"
            BorderBrush="Black"
            BorderThickness="2" />
    </Grid>
</UserControl>
